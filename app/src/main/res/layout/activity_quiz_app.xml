<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizApp"
    android:background="@drawable/constraint_design_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview"
        android:background="@drawable/quiz_backgroun">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/toc_cardview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp"
                android:background="#B3CBE6"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#B7A3DA">
                    <ImageView
                        android:id="@+id/toc"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/dsa"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/toctext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOC "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/computer_cardview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#D3C5C5">
                    <ImageView
                        android:id="@+id/computer"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/computer"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/computertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computer "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/dsa_cardview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#6478E3">
                    <ImageView
                        android:id="@+id/dsa"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/algorithm"
                        android:scaleType="fitXY"/>
                    <TextView
                       android:id="@+id/dsatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DSA"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/java_cardview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_margin="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#C5E1ED">
                    <ImageView
                       android:id="@+id/java"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/java"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/javatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JAVA"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/baloo_bhai"

        android:text="Quiz Categories"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
       app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>